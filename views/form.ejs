<%- include ("./partials/header.ejs") %>
  
<div
  class="d-flex mx-auto my-2 shadow text-center rounded"
  style="width: 90vw; height: fit-content; background-color: cadetblue"
>
  <div
    class="d-flex flex-column align-self-center mx-auto"
    style="width: 100%; height: 100%"
  >

    <form action=<%= link %> method="post" style="width: 40%;" class="mx-auto my-2 align-middle">
        <input type="hidden" name="verification" value="true" />
        <div class="form-group row my-2">
          <label for="inputCenter" class="col-sm-2 col-form-label">Center: </label>
          <div class="col-sm-10">
            <select id="inputCenter" class="form-control" name="center">
              <option>Adilabad</option>
              <option>Karimnagar</option>
              <option>Kinwat</option>
              <option>Kompally</option>
              <option>Secunderabad</option>
              <option>Hyderabad</option>
            </select>
          </div>
        </div>
        <div class="form-group row my-2">
          <label for="inputTime" class="col-sm-2 col-form-label">Time: </label>
          <div class="col-sm-10">
            <select id="inputTime" name="time" class="form-control">
              <option>Morning</option>
              <option>Evening</option>
            </select>
          </div>
        </div>
        <div class="form-group row my-2">
          <label for="inputDeadline" class="col-sm-2 col-form-label">Deadline: </label>
          <div class="col-sm-10">
            <select id="inputDeadline" name="deadline" class="form-control">
              <option>1</option>
              <option>2</option>
            </select>
          </div>
        </div>
        <div class="form-group row my-2">
          <button type="submit" class="btn btn-dark btn-lg mx-auto" style="width: 80%;">
            <% if(action === "post") { %>
              Add Data
            <% } else { %>
              Confirm waras
            <% } %>  
          </button>
        </div>
    </form>

    <a
      href="/"
      class="text-wrap mx-auto my-2 align-middle btn btn-dark btn-lg" style="width: 20%; font-size: xx-large;"
    >Back</a>
  </div>
</div>

<%- include ("./partials/footer.ejs") %>